include _common/_mixins

doctype html
html(lang='ru')
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content="IE=edge,chrome=1")
		meta(name='viewport' content='width=device-width')
		link(rel="stylesheet" href="/bower/select2/dist/css/select2.css")
		link(rel="stylesheet" href="/bower/jquery-ui/themes/ui-lightness/jquery-ui.css")
		link(rel="stylesheet" href="/css/stylesheet.css")
		link(rel="stylesheet" href="/css/main.css")
		title
			block title
	body
		.wrapper

			include _common/_header
			block nav
			.main_content
				.container
					block navigation

					aside.sidebar
						include _common/_sidebar				
					.right_content
						.sort
							include _common/_sort					
						.content
							block content
			.main_information
				.container
					include _common/_inform

		include _common/_footer
		script(src='bower/jquery/jquery.js')
		script(src='bower/select2/dist/js/select2.min.js')
		script(src='bower/jquery-ui/jquery-ui.min.js')
		script(src='js/autocolumn.js')
		script(src='js/main.js')